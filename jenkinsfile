pipeline {
    agent any
    // environment {
    //     PATH = "/opt/maven/bin/:$PATH"
    // }
    parameters { 
        booleanParam(name: 'DEPLOY_OR_NOT', defaultValue: true, 
               description: 'Do you want to Build Stage') 
    }
    tools {
        maven 'maven3.9.10'
    }
    stages {
        stage('Manasa_gitcheckout') {
            steps {
                git branch: 'shiva', url: 'https://github.com/shivaprasadn011-hub/dec09_java'
            }
        }
        stage('Manasa_maven-check') {
            steps {
               sh 'mvn --version'
            }
        }   

        stage('Manasa_Build') {
            when { 
                expression {
                    params.DEPLOY_OR_NOT 
                }
            } 
            steps {
                sh 'mvn -B -DskipTests clean package'
                sh 'mvn validate'
                sh 'mvn install'
            }
        }         
 
         stage('December_Validation_Code') {
            steps {
                echo "Skipped"
            }
        }      
        
    }
}
