pipeline {
    agent any
    tools {
    maven 'mvn'
}
parameters {
    booleanParam(
        name: 'SKIP_TESTS',
        defaultValue: false,
        description: 'Skip unit tests?'
    )
}

}


    stages {
    
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/shivaprasadn011-hub/dec09_java.git'
            }
        }
        stage('version') {
            steps {
                sh 'mvn --version'
            }
        }
      
        stage('Deploy') {
            steps {
              
               script {
                 if (params.SKIP_TESTS) {
                 sh "mvn clean package -DskipTests"
                 } else {
                 sh "mvn clean package"
                }
            }

         }

            }
        }
    }
}
