pipeline {
    agent any
    tools {
    maven 'mvn'
}
parameters {
    choice(
        name: 'environment',
        choices: ['dev', 'qa', 'prod'],
        description: 'Select target environment'
    )
}


    stages {
    
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/shivaprasadn011-hub/dec09_java.git'
            }
        }
        stage('version') {
            steps {
                sh 'mvn --version'
            }
        }
      
        stage('Deploy') {
            steps {
               sh "echo Deploying to ${params.environment}"
            }
        }
    }
}
